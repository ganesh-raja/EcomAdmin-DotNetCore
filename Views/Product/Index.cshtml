@{
    ViewData["Title"] = "All Products";
}
@model List<Product>
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-end">
            <a class="btn btn-primary" data-toggle="tooltip" title="Add Product" asp-action="Create" asp-controller="Product"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
</div>
<div class="container">
    <div class="row text-center my-3">
        <h3>All Products</h3>
    </div>
    @if (Model.Count > 0)
    {
        <table id="table1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">Product ID</th>
                    <th class="text-center">Product Name</th>                    
                    <th class="text-center">Image</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr class="text-center">
                        <td class="text-center" width="20%">@prod.ProductId</td>
                        <td width="20%">@prod.Name</td>                        
                        <td width="20%">
                            <img src="@prod.ImageUrl" width="50px" height="40px" />
                        </td>
                        <td class="text-center" width="20%">@prod.Price</td>
                        <td width="20%">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-controller="Product" asp-route-id="@prod.ProductId"
                                   class="btn btn-warning" data-toggle="tooltip" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@prod.ProductId"
                                   class="btn btn-danger" data-toggle="tooltip" title="Delete"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="col py-4 text-danger text-center border border-1">
                <h4>No Record Found.</h4>
            </div>
        </div>
    }

</div>
@section Scripts {
    <script type="text/javascript">

        $('#table1').DataTable();
    </script>
}
